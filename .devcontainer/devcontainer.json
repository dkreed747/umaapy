{
  "name": "UMAAPy",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "umaapy-dev",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/git-credential-manager:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.isort",
        "ms-python.black-formatter",
        // Others
        "GitLab.gitlab-workflow",
        "redhat.vscode-yaml",
        "streetsidesoftware.code-spell-checker",
        "redhat.vscode-xml"
      ]
    }
  }
}